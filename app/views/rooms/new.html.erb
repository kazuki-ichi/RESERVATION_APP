<h3>新規登録</h3>
<%= form_with model: @room do |f| %>
  <table>
    <tr>
      <th><%= f.label :name ,"施設名" %></th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th><%= f.label :detail ,"施設詳細" %></th>
      <td><%= f.text_area :detail %></td>
    </tr>
    <tr>
      <th><%= f.label :price ,"料金" %></th>
      <td><%= f.number_field :price, min: 1 %></td>
    </tr>
    <tr>
      <th><%= f.label :address ,"住所" %></th>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
    <th><%= f.label :image ,"施設画像" %></th>
    <td><%= f.file_field :image %></td>
    </tr>
    <%= f.hidden_field :user_id, :value => current_user.id %>
  </table>
  
  <div>
    <ul>
      <li><%= f.submit "登録完了する"%></li>
      <li><%= link_to "キャンセル", :rooms %></li>
    </ul>
  </div>
<% end %>