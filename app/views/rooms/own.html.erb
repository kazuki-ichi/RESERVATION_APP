<h3>登録済み一覧</h3>

<table>
  <thead>
    <tr>
      <th>画像</th>
      <th>施設名</th>
      <th>紹介文</th>
      <th>料金</th>
      <th>作成日</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td class="room_path">
          <% if room.image.attached? %>
          <%= image_tag room.image %>
          <% end %>
        </td>
        <td><%= link_to room.name, room_path(room) %></td>
        <td><%= room.detail %></td>
        <td><%= room.price %></td>
        <td><%= room.created_at.to_s(:datetime_jp) %></td>
      </tr>
      <% end %>
   </tbody>
 </table>